#include <stdio.h>

int main()
{
    char a = 's';
    signed char d;
    int f = 10;
    long long int g;
    long double h;
    short j;
    unsigned int k = 30;
    unsigned long int l;
    float x;
    double c = 9.87;
    printf("size of char data type is %d.\n",sizeof(a));
    printf("size of signed char data type is %d.\n",sizeof(d));
    printf("size of int data type is %d.\n",sizeof(f));
    printf("size of long long int data type is %d.\n",sizeof(g));
    printf("size of long double data type is %d.\n",sizeof(h));
    printf("size of short data type is %d.\n",sizeof(j));
    printf("size of unsigned int data type is %d.\n",sizeof(k));
    printf("size of unsigned long int data type is %d.\n",sizeof(l));
    printf("size of float data type is %d.\n",sizeof(x));
    printf("size of double data type is %d.\n",sizeof(c));
    
    return 0;
}
